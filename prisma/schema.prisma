generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model Wish {
  id        String   @id @default(cuid())
  name      String?
  friendId  String?  @unique
  message   String
  createdAt DateTime @default(now())
  revealed  Boolean  @default(false)
  replies   Reply[]

  friend    Friend?  @relation(fields: [friendId], references: [id])

  @@map("wishes")
}

model Reply {
  id        String   @id @default(cuid())
  wishId    String
  message   String
  createdAt DateTime @default(now())
  wish      Wish     @relation(fields: [wishId], references: [id], onDelete: Cascade)

  @@map("replies")
}

model Friend {
  id        String   @id @default(cuid())
  name      String
  avatarUrl String?
  createdAt DateTime @default(now())
  wish      Wish?

  @@map("friends")
}
